---
import Inicio from '../layouts/Inicio.astro';
import Carousel from '../components/Carousel.astro';
import fondo1 from '../assets/images/fondo_inicio.webp';
import fondo2 from '../assets/images/fondo_inicio2.webp';
import fondo3 from '../assets/images/fondo_inicio3.webp';
import fondo4 from '../assets/images/fondo_inicio4.webp';

const images = [
  fondo1.src,
  fondo2.src,
  fondo3.src,
  fondo4.src
];
---

<Inicio>
  <Carousel 
    title="Asociación Jumillana Amigos de la Música" 
    images={images}
    autoPlay={true}
    interval={4000}
  />
</Inicio>
